<h1>ログイン</h1>

<%= form_with model: @user, method: :post do |form| %>    
  <div class= "col-md-4">
    <div class="mb-3">
      <%= form.label :name, style: "display: block", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", value: @name %>
    </div>

    <div class="mb-3">
      <%= form.label :password_digest, style: "display: block", class: "form-label" %>
      <%= form.text_field :password_digest, class: "form-control", value: @password_digest %>
    </div>
    <div>
      <%= form.submit "ログイン", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>