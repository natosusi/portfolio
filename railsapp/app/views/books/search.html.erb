<div id="flash">
</div>

<h1 class="fw-bold mb-4">書籍検索・登録</h1>

<%= form_with url: search_books_path, method: :post, data: { turbo_stream: true } do |f| %>
  <div class="row g-2 mb-3">
    <div class="col-md-4">
      <%= f.text_field :isbn, placeholder: "13桁のISBNコードを入力", class: 'form-control' %>
    </div>
    <div class="col-auto">
      <%= f.submit "検索", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div id="search_result" class="mb-3">
</div>
