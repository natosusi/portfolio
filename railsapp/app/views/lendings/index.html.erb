<h1>書籍一覧</h1>

<div id="lendings">
    <table class = "table">
    <thead>
      <tr>
        <th>書籍タイトル</th>
        <th>ステータス</th>
        <th>返却予定日</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book_available?(book) ? '貸し出し可能' : '貸し出し中' %></td>
          <td><%= schedule_date_for_lending(book) %></td>
          <% if book_available?(book) %>
            <td><%= link_to "借りる", new_lending_path(id: book.id), class: "btn btn-primary btn-sm" %></td>
          <% elsif latest_lending_user(book) %>
            <td><%= link_to "返却する", edit_lending_path(id: book.id), class: "btn btn-outline-primary btn-sm" %></td>
          <% else %>
          <% end %>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>