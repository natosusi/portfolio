<h1>書籍貸出</h1>
<%= form_with(model: @lending) do |f| %>
  <p>タイトル: <%= @lending.book.title %></p>
  <p>貸出日: <%= Date.current %></p>
  <%= f.label "返却予定日", style: "display: block", class: "form-label" %>
  <%= f.date_field :schedule_date, min: Date.current, class: "form-control mb-3" %>

  <%= f.hidden_field :book_id %>

  <div class="d-grid d-md-flex justify-content-md-end">
    <%= f.submit '確定', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>