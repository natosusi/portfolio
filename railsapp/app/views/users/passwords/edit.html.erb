<%= render "users/shared/error_messages", resource: resource %>
<h2 class="fw-bold mb-3">パスワード再設定</h2>

<div class="card mb-3" style = "max-width: 600px;" >
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-2">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: true, class: "form-control" %>
      </div>

      <div class="field mb-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>  

      <div class="actions d-grid d-md-flex justify-content-md-end">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>